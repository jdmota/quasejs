{
  "name": "quase",
  "private": true,
  "scripts": {
    "n": "node scripts/node",
    "i": "node --inspect-brk scripts/node",
    "test": "jest",
    "build": "node scripts/build.js",
    "tsc": "./scripts/node_modules/typescript/.bin/tsc --noEmit",
    "lint": "eslint **/*.js **/*.ts",
    "lint_custom": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quase/quasejs.git"
  },
  "author": "Jo√£o Mota",
  "license": "MIT",
  "workspaces": [
    "packages/builder",
    "packages/cli",
    "packages/config",
    "packages/error",
    "packages/languages/parser",
    "packages/languages/quase-lang",
    "packages/path-url",
    "packages/publisher",
    "packages/schema",
    "packages/source-map",
    "packages/unit",
    "packages/util/get-plugins",
    "packages/view"
  ],
  "jest": {
    "resolver": "<rootDir>/scripts/resolver",
    "roots": [
      "<rootDir>/packages/builder/test/",
      "<rootDir>/packages/cli/test/",
      "<rootDir>/packages/config/test/",
      "<rootDir>/packages/error/test/",
      "<rootDir>/packages/languages/parser/test/",
      "<rootDir>/packages/languages/quase-lang/test/",
      "<rootDir>/packages/schema/test/",
      "<rootDir>/packages/source-map/test/",
      "<rootDir>/packages/unit/test/",
      "<rootDir>/packages/util/get-plugins/test/",
      "<rootDir>/packages/view/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/package-manager/test/test-folders"
    ],
    "transform": {
      "^.+\\.(j|t)s$": "babel-jest"
    },
    "testRegex": "/test/(index|.+\\.test)\\.(j|t)s$",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/parser": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.5.5",
    "@quase/eslint-config-base": "^0.1.0",
    "@types/babel__code-frame": "^7.0.1",
    "@types/ci-info": "^2.0.0",
    "@types/fs-extra": "^8.0.0",
    "@types/glob": "^7.1.1",
    "@types/is-ci": "^2.0.0",
    "@types/jest": "^24.0.15",
    "@types/jest-diff": "^20.0.1",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^12.6.8",
    "@types/normalize-package-data": "^2.4.0",
    "@types/write-file-atomic": "^2.1.2",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-eslint": "^10.0.2",
    "babel-helper-evaluate-path": "^0.5.0",
    "babel-jest": "^24.8.0",
    "eslint": "^5.16.0",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.13.6",
    "eslint-plugin-node": "^9.1.0",
    "execa": "^2.0.3",
    "fs-extra": "^8.1.0",
    "jest": "^24.8.0",
    "prepend-file": "^1.3.1",
    "resolve": "^1.11.1",
    "ts-pnp": "^1.1.2",
    "typescript": "^3.5.3"
  },
  "installConfig": {
    "pnp": true
  }
}
