{
  "name": "quase",
  "private": true,
  "scripts": {
    "test": "jest",
    "build": "node packages/build.js",
    "babel-node": "babel-node",
    "flowtype": "flow-typed install",
    "flow": "flow",
    "lint": "eslint \"**/*.js\"",
    "coverage": "nyc jest && nyc report --reporter=html",
    "bootstrap": "lerna bootstrap",
    "outdated": "npm-check --ignore eslint-config-* --ignore fast-async --ignore flow-typed --ignore @babel/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quase/quasejs.git"
  },
  "author": "Jo√£o Mota",
  "license": "MIT",
  "jest": {
    "resolver": "<rootDir>/packages/resolver",
    "roots": [
      "<rootDir>/packages/builder/test/",
      "<rootDir>/packages/cli/test/",
      "<rootDir>/packages/config/test/",
      "<rootDir>/packages/fs/find-files/test/",
      "<rootDir>/packages/package-manager/test/",
      "<rootDir>/packages/pathname/test/",
      "<rootDir>/packages/unit/test/",
      "<rootDir>/packages/view/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/package-manager/test/test-folders"
    ],
    "testRegex": "/test/(index|.+\\.test)\\.js$",
    "testEnvironment": "node"
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "__dev__/**",
      "coverage/**",
      "dist/**",
      "packages/*/__dev__/**",
      "packages/*/test/**",
      "tasks/**"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.38",
    "@babel/core": "^7.0.0-beta.38",
    "@babel/node": "7.0.0-beta.38",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.38",
    "@babel/plugin-transform-flow-strip-types": "7.0.0-beta.38",
    "@babel/preset-env": "7.0.0-beta.38",
    "@quase/eslint-config-quase": "^0.2.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.1",
    "eslint": "^4.18.0",
    "execa": "^0.9.0",
    "flow-bin": "^0.66.0",
    "flow-typed": "^2.1.5",
    "fs-extra": "^5.0.0",
    "jest": "^22.4.2",
    "lerna": "3.0.0-alpha.2",
    "npm-check": "^5.5.2",
    "resolve": "^1.5.0"
  }
}
