{
  "name": "quase",
  "private": true,
  "scripts": {
    "test": "jest",
    "build": "node packages/build.js build",
    "publish": "node packages/build.js publish",
    "node": "babel-node",
    "flowtype": "flow-typed install",
    "check": "flow",
    "lint": "eslint \"**/*.js\"",
    "coverage": "nyc jest && nyc report --reporter=html",
    "bootstrap": "lerna bootstrap",
    "outdated": "npm-check --ignore eslint-config-* --ignore fast-async --ignore flow-typed"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quase/quasejs.git"
  },
  "author": "JoÃ£o Mota",
  "license": "MIT",
  "jest": {
    "roots": [
      "<rootDir>/packages/builder/test/",
      "<rootDir>/packages/cli/test/",
      "<rootDir>/packages/events/test/",
      "<rootDir>/packages/package-manager/test/",
      "<rootDir>/packages/pathname/test/",
      "<rootDir>/packages/unit/test/",
      "<rootDir>/packages/view/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/package-manager/test/test-folders"
    ],
    "testRegex": "/test/(index|.+\\.test)\\.js$",
    "testEnvironment": "node"
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "__dev__/**",
      "coverage/**",
      "dist/**",
      "packages/*/__dev__/**",
      "packages/*/test/**",
      "tasks/**"
    ]
  },
  "devDependencies": {
    "@quase/eslint-config-quase": "^0.2.0",
    "babel-cli": "7.0.0-beta.3",
    "babel-core": "7.0.0-beta.3",
    "babel-jest": "^22.0.4",
    "babel-minify": "^0.2.0",
    "babel-node": "^7.0.0-beta.2",
    "babel-plugin-transform-class-properties": "7.0.0-beta.3",
    "babel-plugin-transform-flow-strip-types": "7.0.0-beta.3",
    "babel-preset-env": "^7.0.0-beta.3",
    "eslint": "^4.10.0",
    "flow-bin": "^0.61.0",
    "flow-typed": "^2.1.5",
    "fs-extra": "^5.0.0",
    "jest": "^22.0.4",
    "lerna": "^2.5.1",
    "npm-check": "^5.5.2"
  }
}
