{
  "name": "quase",
  "private": true,
  "scripts": {
    "n": "node scripts/node",
    "i": "node --inspect-brk scripts/node",
    "test": "jest",
    "build": "node scripts/build",
    "ts": "yarn pnpify tsc",
    "lint": "yarn pnpify eslint **/*.js **/*.ts",
    "prettier-check": "prettier --check \"**/*.{js,ts,json}\"",
    "prettier-write": "prettier --write \"**/*.{js,ts,json}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quase/quasejs.git"
  },
  "author": "Jo√£o Mota",
  "license": "MIT",
  "workspaces": [
    "packages/builder",
    "packages/cli",
    "packages/config",
    "packages/error",
    "packages/languages/parser",
    "packages/languages/quase-lang",
    "packages/path-url",
    "packages/publisher",
    "packages/schema",
    "packages/source-map",
    "packages/unit",
    "packages/util/get-plugins",
    "packages/view"
  ],
  "jest": {
    "resolver": "<rootDir>/scripts/resolver",
    "roots": [
      "<rootDir>/packages/builder/test/",
      "<rootDir>/packages/cli/test/",
      "<rootDir>/packages/config/test/",
      "<rootDir>/packages/error/test/",
      "<rootDir>/packages/languages/parser/test/",
      "<rootDir>/packages/languages/quase-lang/test/",
      "<rootDir>/packages/schema/test/",
      "<rootDir>/packages/source-map/test/",
      "<rootDir>/packages/unit/test/",
      "<rootDir>/packages/util/get-plugins/test/",
      "<rootDir>/packages/view/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/package-manager/test/test-folders"
    ],
    "transform": {
      "^.+\\.(j|t)s$": "babel-jest"
    },
    "testRegex": "/test/(index|.+\\.test)\\.(j|t)s$",
    "testEnvironment": "node"
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/parser": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/register": "^7.9.0",
    "@quase/eslint-config-base": "^0.1.0",
    "@types/babel__code-frame": "^7.0.1",
    "@types/babel__core": "^7.1.7",
    "@types/babel__generator": "^7.6.1",
    "@types/babel__template": "^7.0.2",
    "@types/babel__traverse": "^7.0.11",
    "@types/ci-info": "^2.0.0",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/is-ci": "^2.0.0",
    "@types/jest": "^25.2.1",
    "@types/jest-diff": "^24.3.0",
    "@types/minimatch": "^3.0.3",
    "@types/node": "^13.13.4",
    "@types/normalize-package-data": "^2.4.0",
    "@types/write-file-atomic": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "@yarnpkg/pnpify": "^2.0.0-rc.22",
    "babel-eslint": "^10.1.0",
    "babel-helper-evaluate-path": "^0.5.0",
    "babel-jest": "^26.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-node": "^0.3.3",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.9.0",
    "eslint-plugin-node": "^11.1.0",
    "execa": "^4.0.0",
    "fs-extra": "^9.0.0",
    "jest": "^26.0.0",
    "prepend-file": "^1.3.1",
    "prettier": "^2.0.5",
    "resolve": "^1.17.0",
    "typescript": "^3.8.3"
  }
}
