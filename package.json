{
  "name": "quase",
  "private": true,
  "scripts": {
    "n": "node scripts/node",
    "i": "node --inspect-brk scripts/node",
    "test": "jest",
    "build": "node scripts/build.js",
    "flow": "flow",
    "tsc": "./scripts/typescript/.bin/tsc --noEmit",
    "lint": "eslint **/*.js **/*.ts",
    "lint_custom": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quase/quasejs.git"
  },
  "author": "JoÃ£o Mota",
  "license": "MIT",
  "workspaces": [
    "packages/builder",
    "packages/cli",
    "packages/config",
    "packages/error",
    "packages/fs/cacheable-fs",
    "packages/fs/find-files",
    "packages/languages/parser",
    "packages/languages/quase-lang",
    "packages/package-manager",
    "packages/path-url",
    "packages/pathname",
    "packages/publisher",
    "packages/schema",
    "packages/source-map",
    "packages/unit",
    "packages/util/get-plugins",
    "packages/view"
  ],
  "jest": {
    "resolver": "<rootDir>/scripts/resolver",
    "roots": [
      "<rootDir>/packages/builder/test/",
      "<rootDir>/packages/cli/test/",
      "<rootDir>/packages/config/test/",
      "<rootDir>/packages/error/test/",
      "<rootDir>/packages/fs/find-files/test/",
      "<rootDir>/packages/languages/parser/test/",
      "<rootDir>/packages/languages/quase-lang/test/",
      "<rootDir>/packages/package-manager/test/",
      "<rootDir>/packages/pathname/test/",
      "<rootDir>/packages/schema/test/",
      "<rootDir>/packages/source-map/test/",
      "<rootDir>/packages/unit/test/",
      "<rootDir>/packages/util/get-plugins/test/",
      "<rootDir>/packages/view/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/package-manager/test/test-folders"
    ],
    "transform": {
      "^.+\\.(j|t)s$": "babel-jest"
    },
    "testRegex": "/test/(index|.+\\.test)\\.js$",
    "testEnvironment": "node"
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "__dev__/**",
      "coverage/**",
      "dist/**",
      "packages/*/__dev__/**",
      "packages/*/test/**",
      "tasks/**"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/parser": "^7.4.2",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.0",
    "@quase/eslint-config-base": "^0.1.0",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "babel-eslint": "^10.0.1",
    "babel-helper-evaluate-path": "^0.5.0",
    "babel-jest": "^24.5.0",
    "eslint": "^5.15.3",
    "eslint-import-resolver-node": "^0.3.2",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "execa": "^1.0.0",
    "flow-bin": "^0.88.0",
    "fs-extra": "^7.0.1",
    "jest": "^24.5.0",
    "prepend-file": "^1.3.1",
    "resolve": "^1.10.0",
    "ts-pnp": "^1.0.1",
    "typescript": "^3.3.4000"
  },
  "installConfig": {
    "pnp": true
  }
}
