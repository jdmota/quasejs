{
  "name": "quase",
  "private": true,
  "scripts": {
    "test": "jest",
    "node": "babel-node",
    "flowtype": "flow-typed install",
    "check": "flow",
    "lint": "eslint \"**/*.js\"",
    "coverage": "nyc jest && nyc report --reporter=html",
    "bootstrap": "lerna bootstrap",
    "outdated": "npm-check --ignore eslint-config-* --ignore fast-async --ignore flow-typed"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quase/quasejs.git"
  },
  "author": "JoÃ£o Mota",
  "license": "MIT",
  "jest": {
    "roots": [
      "<rootDir>/packages/builder/test/",
      "<rootDir>/packages/events/test/",
      "<rootDir>/packages/package-manager/test/",
      "<rootDir>/packages/pathname/test/",
      "<rootDir>/packages/unit/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/package-manager/test/test-folders"
    ],
    "testRegex": "/test/index\\.js$",
    "testEnvironment": "node"
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "__dev__/**",
      "coverage/**",
      "dist/**",
      "packages/*/__dev__/**",
      "packages/*/test/**",
      "tasks/**"
    ]
  },
  "devDependencies": {
    "@quase/eslint-config-quase": "^0.1.0",
    "babel-cli": "7.0.0-beta.2",
    "babel-core": "7.0.0-beta.2",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^21.0.0",
    "babel-minify": "^0.2.0",
    "babel-node": "^7.0.0-beta.2",
    "babel-plugin-transform-class-properties": "7.0.0-beta.2",
    "babel-plugin-transform-flow-strip-types": "7.0.0-beta.2",
    "babel-preset-env": "^2.0.0-beta.2",
    "eslint": "^4.6.1",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jest": "^21.0.0",
    "eslint-plugin-node": "^5.0.0",
    "flow-bin": "0.56.0",
    "flow-typed": "^2.1.5",
    "fs-extra": "^4.0.1",
    "jest": "^21.0.0",
    "lerna": "^2.1.2",
    "npm-check": "^5.4.5"
  }
}
