{
  "name": "quase",
  "private": true,
  "scripts": {
    "n": "node scripts/node",
    "test": "node --experimental-worker ./node_modules/jest/bin/jest.js",
    "build": "node scripts/build.js",
    "flow": "flow",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"**/*.js\" \"**/*.ts\"",
    "coverage": "nyc jest && nyc report --reporter=html",
    "bootstrap": "lerna bootstrap",
    "outdated": "npm-check --ignore eslint-config-* --ignore flow-typed --ignore @babel/* --ignore @quase/*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quase/quasejs.git"
  },
  "author": "Jo√£o Mota",
  "license": "MIT",
  "jest": {
    "resolver": "<rootDir>/scripts/resolver",
    "roots": [
      "<rootDir>/packages/builder/test/",
      "<rootDir>/packages/cli/test/",
      "<rootDir>/packages/config/test/",
      "<rootDir>/packages/error/test/",
      "<rootDir>/packages/fs/find-files/test/",
      "<rootDir>/packages/languages/parser/test/",
      "<rootDir>/packages/languages/quase-lang/test/",
      "<rootDir>/packages/package-manager/test/",
      "<rootDir>/packages/pathname/test/",
      "<rootDir>/packages/source-map/test/",
      "<rootDir>/packages/unit/test/",
      "<rootDir>/packages/util/get-plugins/test/",
      "<rootDir>/packages/view/test/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/package-manager/test/test-folders"
    ],
    "transform": {
      "^.+\\.(j|t)s$": "<rootDir>/scripts/babel-jest"
    },
    "testRegex": "/test/(index|.+\\.test)\\.js$",
    "testEnvironment": "node"
  },
  "nyc": {
    "all": true,
    "sourceMap": false,
    "instrument": false,
    "exclude": [
      "__dev__/**",
      "coverage/**",
      "dist/**",
      "packages/*/__dev__/**",
      "packages/*/test/**",
      "tasks/**"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/parser": "^7.2.3",
    "@babel/plugin-proposal-class-properties": "^7.2.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@quase/eslint-config-base": "^0.1.0",
    "@types/node": "^10.12.18",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "eslint": "^5.10.0",
    "eslint-import-resolver-typescript": "^1.1.1",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-jest": "^22.1.2",
    "eslint-plugin-typescript": "1.0.0-rc.0",
    "execa": "^1.0.0",
    "flow-bin": "^0.88.0",
    "fs-extra": "^7.0.1",
    "jest": "^23.6.0",
    "lerna": "^3.6.0",
    "npm-check": "^5.9.0",
    "pluggable-babel-eslint": "^0.3.0",
    "resolve": "^1.8.1",
    "typescript": "^3.2.2"
  }
}
